{{!
    @template block_myoverview/progress-bar
    This template renders a simple progress bar.
    Example context (json):
    {
        "progress": 50
    }
}}
<table class="modal-table">
    <thead>
        <tr>
            <th>#</th>
            <th>Sigla</th>
            <th>Nombre</th>
            <th>Fecha inicio</th>
            <th>Fecha fin</th>
        </tr>
    </thead>
    <tbody>
        {{#courses}}
        <tr>
            <td>{{number}}</td>
            <td>{{shortname}}</td>
            <td>{{fullname}}</td>
            <td><span class="date">{{startdate}}</span></td>
            <td><span class="date">{{enddate}}</span></td>
        </tr>
        {{/courses}}
    </tbody>
</table>