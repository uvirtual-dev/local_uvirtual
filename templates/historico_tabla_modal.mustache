{{!
    @template block_myoverview/progress-bar
    This template renders a simple progress bar.
    Example context (json):
    {
        "progress": 50
    }
}}
<table class="modal-table">
    <thead>
        <tr>
            <th>#</th>
            <th>Sigla</th>
            <th>Materia</th>
            <th>Nota</th>
        </tr>
    </thead>
    <tbody>
        {{#courses}}
        <tr>
            <td>{{number}}</td>
            <td>{{shortName}}</td>
            <td>{{fullName}}</td>
            <td>{{grade}}</td>
        </tr>
        {{/courses}}
    </tbody>
</table>